<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.chailove"
		name="ChaiLove"
		version="0.14.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.snes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>ChaiLove</platforms>
		<extensions>chai|chailove</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">ChaiLove v0.14.0</summary>
		<description>ChaiLove is a 2D game framework. Inspired by the Love2D API, ChaiLove allows the creation of 2D games using the ChaiScript scripting language.

See https://github.com/libretro/libretro-chailove for a list of games that are available in ChaiLove.

Supported files: .chai, .chailove</description>
		<license>MIT</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
		</assets>
	</extension>
</addon>
